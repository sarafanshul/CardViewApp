<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="pref_cat_notification"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:summary="Remind you about un-done tasks?"
            app:title="Enable notifications" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_cat_data"
        app:title="My data">

        <Preference
            app:key="pref_data"
            app:summary="Clear all my user data and reset app"
            app:title="Start fresh" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_cat_feedback"
        app:title="Help \u0026 Feedback">

        <Preference
            app:key="pref_help"
            app:title="Help" />

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />


    </PreferenceCategory>

    <PreferenceCategory
        app:title="App version">

        <Preference
            app:title="@string/version"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_cat_about"
        app:title="About Us">

        <Preference
            app:key="pref_about"
            app:title="Project By Anshul Saraf" />

    </PreferenceCategory>

</PreferenceScreen>